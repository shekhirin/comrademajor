{
  "author": "Alexey Shekhirin <a.shekhirin@gmail.com>",
  "name": "comrademajor",
  "version": "0.1.0",
  "scripts": {
    "build": "rimraf dist pkg && webpack --config webpack.prod.js",
    "build-wo-wasm": "rimraf dist && webpack --config webpack.prod-wo-wasm.js",
    "start": "rimraf dist pkg && webpack serve",
    "test": "cargo test && wasm-pack test --headless"
  },
  "devDependencies": {
    "@types/html-webpack-plugin": "^3.2.4",
    "@wasm-tool/wasm-pack-plugin": "^1.1.0",
    "copy-webpack-plugin": "^6.3.2",
    "html-webpack-plugin": "^4.5.0",
    "husky": "^4.3.0",
    "rimraf": "^3.0.0",
    "ts-loader": "^8.0.11",
    "typescript": "^4.1.2",
    "webpack": "^5.6.0",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "4.0.0-beta.0",
    "webpack-merge": "^5.4.0",
    "worker-loader": "^3.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build && rm ./pkg/.gitignore && git add pkg"
    }
  },
  "dependencies": {
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/wicg-file-system-access": "^2020.9.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "ts-retry-promise": "^0.6.0"
  }
}
